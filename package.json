{
  "name": "create-react-app-coverage",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@playwright/test": "^1.51.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-plugin-istanbul": "^6.1.1",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "nyc": "^15.1.0",
    "react": "^17.0.2",
    "react-app-rewired": "^2.1.11",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider react-app-rewired start",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider react-app-rewired build",
    "test": "cross-env npx playwright test e2e/App.test.ts",
    "coverage": "npm run test && nyc report --reporter=text",
    "test:e2e:docker": "docker-compose run --rm playwright",
    "test:e2e:docker:update": "docker-compose run --rm playwright --update-snapshots"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.13.10"
  }
}
