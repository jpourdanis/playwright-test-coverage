{
  "name": "create-react-app-coverage",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@playwright/test": "^1.51.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-plugin-istanbul": "^6.1.1",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "i18next": "^25.8.13",
    "i18next-browser-languagedetector": "^8.2.1",
    "nyc": "^15.1.0",
    "react": "^17.0.2",
    "react-app-rewired": "^2.1.11",
    "react-dom": "^17.0.2",
    "react-i18next": "^16.5.4",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider react-app-rewired start",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider react-app-rewired build",
    "test": "cross-env npx playwright test '^(?!.*visual\\.spec\\.ts).*\\.spec\\.ts$'",
    "test:bdd": "npx bddgen && npx playwright test --project=BDD",
    "test:cross-browser": "cross-env CROSS_BROWSER=true npx playwright test '^(?!.*visual\\.spec\\.ts).*\\.spec\\.ts$'",
    "coverage": "npm run test && nyc report --reporter=text",
    "test:e2e:docker": "docker-compose run --rm playwright e2e/tests/visual.spec.ts",
    "test:e2e:docker:update": "docker-compose run --rm playwright e2e/tests/visual.spec.ts --update-snapshots"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@cucumber/cucumber": "^12.7.0",
    "@types/node": "^22.13.10",
    "allure-playwright": "^3.5.0",
    "playwright-bdd": "^8.4.2"
  }
}
